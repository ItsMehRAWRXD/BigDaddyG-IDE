{
    "name": "bigdaddyg-asm-ide",
    "publisher": "bigdaddyg",
    "displayName": "BigDaddyG Assembly IDE",
    "description": "Revolutionary Assembly Development Environment",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": ["Other"],
    "activationEvents": [
        "onLanguage:asm",
        "onCommand:bigdaddyg.createProject",
        "onCommand:bigdaddyg.openChat",
        "onCommand:bigdaddyg.launchMultiAgent",
        "onCommand:bigdaddyg.generateAssembly",
        "onView:bigdaddyg.chatView",
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "asm",
            "aliases": ["Assembly", "asm"],
            "extensions": [".asm", ".s"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "asm",
            "scopeName": "source.asm",
            "path": "./syntaxes/asm.tmLanguage.json"
        }],
        "commands": [
            {
                "command": "bigdaddyg.createProject",
                "title": "Create BigDaddyG ASM Project"
            },
            {
                "command": "bigdaddyg.buildProject",
                "title": "Build Assembly Project"
            },
            {
                "command": "bigdaddyg.runProject",
                "title": "Run Assembly Project"
            },
            {
                "command": "bigdaddyg.openChat",
                "title": "Open BigDaddyG Chat",
                "icon": "$(comment-discussion)"
            },
            {
                "command": "bigdaddyg.launchMultiAgent",
                "title": "üöÄ Launch Multi-Agent Session",
                "icon": "$(rocket)"
            },
            {
                "command": "bigdaddyg.generateAssembly",
                "title": "‚ö° Generate Assembly Code",
                "icon": "$(zap)"
            },
            {
                "command": "bigdaddyg.openWebIde",
                "title": "üåê Open Web IDE (Unrestricted AI)",
                "icon": "$(globe)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "bigdaddyg",
                    "title": "BigDaddyG",
                    "icon": "$(robot)"
                }
            ]
        },
        "views": {
            "bigdaddyg": [
                {
                    "icon": "$(comment-discussion)",
                    "id": "bigdaddyg.chatView",
                    "name": "BigDaddyG Chat",
                    "when": "true"
                }
            ]
        },
        "keybindings": [
            {
                "command": "bigdaddyg.buildProject",
                "key": "f7",
                "when": "editorTextFocus && editorLangId == asm"
            },
            {
                "command": "bigdaddyg.runProject",
                "key": "f5",
                "when": "editorTextFocus && editorLangId == asm"
            },
            {
                "command": "bigdaddyg.launchMultiAgent",
                "key": "ctrl+shift+m",
                "when": "editorTextFocus && editorLangId == asm"
            },
            {
                "command": "bigdaddyg.generateAssembly",
                "key": "ctrl+shift+g",
                "when": "editorTextFocus && editorLangId == asm"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "bigdaddyg.createProject",
                    "group": "navigation"
                }
            ],
            "view/title": [
                {
                    "command": "bigdaddyg.openChat",
                    "when": "view == bigdaddyg.chatView",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "node-fetch": "^2.6.7",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "socket.io": "^4.7.2",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "@types/node-fetch": "^2.6.2",
        "typescript": "^4.9.4"
    }
}
