{
  "name": "bigdaddyg-ide",
  "version": "1.0.0",
  "description": "BigDaddyG IDE - Professional Edition with YouTube Browser Integration",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "dev": "electron main.js --dev",
    "demo": "electron main.js --demo",
    "test": "node --test __tests__/**/*.test.js",
    "test:ci": "CI=true node --test __tests__/**/*.test.js",
    "test:ollama": "node -e \"require('./automated-ide-tester.js'); testOllama();\"",
    "benchmark": "node -e \"require('./benchmark-suite.js'); runBenchmarks();\"",
    "lint": "eslint agentic-auto-fixer.js plugins/first-party-linter.js",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test:legacy": "node test-runner.js"
  },
  "keywords": [
    "ide",
    "editor",
    "ai",
    "coding",
    "browser",
    "youtube",
    "electron",
    "monaco",
    "professional"
  ],
  "author": "BigDaddyG",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-window-state": "^5.0.3",
    "eslint": "^8.57.1"
  },
  "dependencies": {
    "monaco-editor": "^0.44.0",
    "node-fetch": "^3.3.2",
    "ws": "^8.14.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express": "^4.18.2"
  },
  "build": {
    "appId": "com.bigdaddyg.ide",
    "productName": "BigDaddyG IDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/monaco-editor/**/*",
      "node_modules/electron-window-state/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bigdaddyg/ide"
  },
  "homepage": "https://github.com/bigdaddyg/ide#readme"
}
